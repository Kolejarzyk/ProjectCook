<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:background="@drawable/scrim">  <!-- trying to get "shadowy" (scrim) background when nav menu is active -->

    <LinearLayout
            android:orientation="vertical"
            android:background="@color/basicBackground"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="62dp"
            tools:context=".SidePanelPage"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"> <!-- android:background << reminder -->
        <Button
                android:text="@string/create_recipe"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:id="@+id/create_recipe_button_side_panel"
                tools:layout_editor_absoluteY="80dp"
                android:layout_marginTop="69dp"
                android:layout_marginStart="6dp"
                app:layout_constraintBottom_toTopOf="@+id/my_builds_button_side_panel"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        <Button
                android:text="@string/my_builds"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:id="@+id/my_builds_button_side_panel"
                app:layout_constraintStart_toStartOf="@+id/create_recipe_button_side_panel"
                app:layout_constraintEnd_toEndOf="@+id/create_recipe_button_side_panel"
                android:layout_marginTop="8dp"
                android:layout_marginStart="6dp"
                app:layout_constraintTop_toBottomOf="@+id/create_recipe_button_side_panel"/>
        <Button
                android:text="@string/favourites"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:id="@+id/favourites_button_side_panel"
                app:layout_constraintStart_toStartOf="@+id/my_builds_button_side_panel"
                app:layout_constraintTop_toBottomOf="@+id/my_builds_button_side_panel"
                android:layout_marginTop="8dp"
                android:layout_marginStart="6dp"
                app:layout_constraintEnd_toEndOf="@+id/my_builds_button_side_panel"/>
        <Button
                android:text="@string/ranking"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:id="@+id/ranking_button_side_panel"
                android:layout_marginTop="8dp"
                android:layout_marginStart="6dp"
                app:layout_constraintTop_toBottomOf="@+id/favourites_button_side_panel"
                app:layout_constraintStart_toStartOf="@+id/favourites_button_side_panel"
                app:layout_constraintEnd_toEndOf="@+id/favourites_button_side_panel"/>
        <Button
                android:text="@string/products_list"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:id="@+id/products_list_button_side_panel"
                android:layout_marginTop="8dp"
                android:layout_marginStart="6dp"
                app:layout_constraintStart_toStartOf="@+id/ranking_button_side_panel"
                app:layout_constraintEnd_toEndOf="@+id/ranking_button_side_panel"
                app:layout_constraintTop_toBottomOf="@+id/ranking_button_side_panel"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>