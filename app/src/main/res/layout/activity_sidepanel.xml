<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/drawer_layout"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:background="@drawable/scrim">  <!-- trying to get "shadowy" (scrim) background when nav menu is active -->

    <!-- Layout to contain contents of main body of screen (drawer will slide over this) -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:fitsSystemWindows="true" />
        <TextView
                android:id="@+id/text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/background_name"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:layout_margin="25dp"
        />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/drawer_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="start"
            android:background="#ebe5ff"
    >
        <TextView
                android:id="@+id/drawer_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/drawer_header"
                android:padding="50dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:background="#dcfffe"
        />
        <android.support.design.widget.NavigationView
                android:id="@+id/navigation_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:menu="@menu/drawer_view"
        />

    <android.support.design.widget.NavigationView
            android:orientation="vertical"
            android:id="@+id/nav_view"
            android:fitsSystemWindows="true"
            android:background="@color/basicBackground"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="62dp"
            tools:context=".SidePanelPage"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" /> <!-- android:background << reminder -->

    </LinearLayout>

