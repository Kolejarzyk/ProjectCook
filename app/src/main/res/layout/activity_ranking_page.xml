<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="#f3e5ab">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f3e5ab">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="@string/ranking"
                    android:textSize="30sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content" android:id="@+id/textView12"/>
        </RelativeLayout>

        <View
                android:layout_height="2dp"
                android:layout_width="match_parent"
                android:background="#FF909090"/>

        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

            <SearchView android:layout_margin="2dp"
                        android:id="@+id/search"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            <View
                    android:layout_height="2dp"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/search"
                    android:background="#FF909090"/>
        </RelativeLayout>

        <android.support.v7.widget.GridLayout
                app:columnOrderPreserved="false"
                android:padding="2dp"
                android:layout_weight="8"
                android:layout_gravity="center"
                app:columnCount="3"
                app:useDefaultMargins="false"
                android:layout_width="match_parent"
                android:layout_height="0dp">

            <android.support.v7.widget.CardView>
                <RelativeLayout android:layout_width="match_parent"
                                android:padding="5dp"
                                android:layout_margin="6dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/customborder">

                    <TextView
                            android:text="@string/recipe_name"
                            app:layout_column="0"
                            app:layout_row="0"
                            android:textSize="30sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textTitle1"/>
                    <TextView
                            android:text="@string/recipe_short_description"
                            app:layout_column="0"
                            app:layout_row="0"
                            android:textSize="16sp"
                            android:layout_below="@+id/textTitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView1"/>
                    <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="5dp"
                            android:contentDescription="@string/item1"
                            android:layout_below="@+id/textView1"
                            app:layout_column="0"
                            app:layout_row="0" tools:srcCompat="@tools:sample/avatars[11]"
                            android:id="@+id/imageItem1"/>
                    <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginStart="5dp"
                            android:contentDescription="@string/item1"
                            android:layout_below="@+id/textView1"
                            android:layout_toEndOf="@+id/imageItem1"
                            app:layout_column="1"
                            app:layout_row="0" tools:srcCompat="@tools:sample/avatars[10]"
                            android:id="@+id/imageItem2"/>
                    <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginStart="5dp"
                            android:contentDescription="@string/item1"
                            android:layout_below="@+id/textView1"
                            android:layout_toEndOf="@+id/imageItem2"
                            app:layout_column="1"
                            app:layout_row="0" tools:srcCompat="@tools:sample/avatars[9]"
                            android:id="@+id/imageItem3"/>
                    <TextView
                            android:text="@string/owner"
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            android:drawableStart="@drawable/ic_owner"
                            android:layout_below="@+id/imageItem1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/owner"/>
                    <TextView
                            android:text="@string/date"
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="25dp"
                            android:drawableStart="@drawable/ic_date"
                            android:layout_below="@+id/imageItem1"
                            android:layout_toEndOf="@+id/owner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/date"/>
                    <TextView
                            android:text="@string/number_of_views"
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="25dp"
                            android:drawableStart="@drawable/ic_views"
                            android:layout_below="@+id/imageItem1"
                            android:layout_toEndOf="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/views"/>
                    <TextView
                            android:text="@string/number_of_comments"
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="25dp"
                            android:drawableStart="@drawable/ic_comments"
                            android:layout_below="@+id/imageItem1"
                            android:layout_toEndOf="@+id/views"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/comments"/>
                    <TextView
                            android:text="@string/favourites_times"
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="25dp"
                            android:drawableStart="@drawable/ic_favs"
                            android:layout_below="@+id/imageItem1"
                            android:layout_toEndOf="@+id/comments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/favourites"/>
                    <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/recipeButton"
                            android:layout_alignParentBottom="true"
                            android:background="@android:color/transparent"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.GridLayout>

    </LinearLayout>
</ScrollView>