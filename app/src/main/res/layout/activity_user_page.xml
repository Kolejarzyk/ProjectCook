<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f3e5ab">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

        <include
                layout="@layout/toolbar"
                android:id="@+id/space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <!-- The main content view where fragments are loaded -->
        <TextView
                android:text="@string/my_recipes"
                android:textSize="27sp"
                android:padding="3dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <FrameLayout
                android:id="@+id/flContent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        <android.support.v7.widget.CardView
                android:layout_height="170dp"
                android:id="@+id/recipe"
                android:layout_width="370dp"
                android:layout_below="@id/space"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
        >

            <RelativeLayout android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_margin="6dp"
                            android:layout_height="match_parent"

                            android:background="@drawable/customborder">

                <TextView
                        android:text="@string/recipe_name"
                        app:layout_column="0"
                        app:layout_row="0"
                        android:textSize="30sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textTitle1"/>
                <TextView
                        android:text="@string/recipe_short_description"
                        app:layout_column="0"
                        app:layout_row="0"
                        android:textSize="16sp"
                        android:layout_below="@+id/textTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView1"/>
                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:contentDescription="@string/item1"
                        android:layout_below="@+id/textView1"
                        app:layout_column="0"
                        app:layout_row="0" tools:srcCompat="@tools:sample/avatars[11]"
                        android:id="@+id/imageItem1"/>
                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="5dp"
                        android:contentDescription="@string/item1"
                        android:layout_below="@+id/textView1"
                        android:layout_toEndOf="@+id/imageItem1"
                        app:layout_column="1"
                        app:layout_row="0" tools:srcCompat="@tools:sample/avatars[10]"
                        android:id="@+id/imageItem2"/>
                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="5dp"
                        android:contentDescription="@string/item1"
                        android:layout_below="@+id/textView1"
                        android:layout_toEndOf="@+id/imageItem2"
                        app:layout_column="1"
                        app:layout_row="0" tools:srcCompat="@tools:sample/avatars[9]"
                        android:id="@+id/imageItem3"/>
                <TextView
                        android:text="@string/owner"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        android:drawableStart="@drawable/ic_owner"
                        android:layout_below="@+id/imageItem1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/owner"/>
                <TextView
                        android:text="@string/date"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="25dp"
                        android:drawableStart="@drawable/ic_date"
                        android:layout_below="@+id/imageItem1"
                        android:layout_toEndOf="@+id/owner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/date"/>
                <TextView
                        android:text="@string/number_of_views"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="25dp"
                        android:drawableStart="@drawable/ic_views"
                        android:layout_below="@+id/imageItem1"
                        android:layout_toEndOf="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/views"/>
                <TextView
                        android:text="@string/number_of_comments"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="25dp"
                        android:drawableStart="@drawable/ic_comments"
                        android:layout_below="@+id/imageItem1"
                        android:layout_toEndOf="@+id/views"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/comments"/>
                <TextView
                        android:text="@string/favourites_times"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="25dp"
                        android:drawableStart="@drawable/ic_favs"
                        android:layout_below="@+id/imageItem1"
                        android:layout_toEndOf="@+id/comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/favourites"/>
                <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/button1"
                        android:layout_alignParentBottom="true"
                        android:background="@android:color/transparent"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>






    </RelativeLayout>

</ScrollView>

    <android.support.design.widget.NavigationView
            android:id="@+id/nvView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@android:color/white"
            app:menu="@menu/drawer_view" />


</android.support.v4.widget.DrawerLayout>