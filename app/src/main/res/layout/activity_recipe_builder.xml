<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
<ScrollView android:layout_width="wrap_content" android:layout_height="wrap_content">

    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">


        <Button
                android:text="Add Category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addCategoryButton"
                android:layout_below="@id/cardInput"
        />
        <Button
                android:background="@drawable/adding_button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/addProductButton"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/cardInput"
                android:layout_below="@id/input1"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text|textNoSuggestions|textPassword"
                android:ems="10"
                android:id="@+id/nameRecipe" android:hint="@string/recipe_name" android:textAlignment="center"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text|textNoSuggestions|textPassword"
                android:hint="@string/category"
                android:ems="10"
                android:id="@+id/input1"
                android:layout_below="@id/nameRecipe"/>

        <android.support.v7.widget.CardView android:layout_width="120dp"
                                            android:layout_height="120dp"
                                            android:id="@+id/cardInput"
                                            android:layout_below="@id/input1"
                                            app:cardElevation="8dp"
                                            app:cardPreventCornerOverlap="false"
                                            app:cardUseCompatPadding="true"
                                            >
        </android.support.v7.widget.CardView>

        <Button
                android:text="@string/add_recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:id="@+id/addButton"
                android:layout_marginBottom="260dp"
                android:layout_below="@id/cardInput"
        />


    </RelativeLayout>


</ScrollView>
</android.support.constraint.ConstraintLayout>