<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomePage" tools:layout_editor_absoluteY="81dp">

    <TextView
            android:layout_width="73dp"
            android:layout_height="41dp"
            android:text="@string/app_name"
            android:textSize="30sp"
            android:id="@+id/textView"
            android:layout_marginTop="69dp"
            android:layout_marginBottom="121dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/sing_in_button_home_page" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="@string/sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sing_in_button_home_page"
            app:layout_constraintStart_toStartOf="@+id/google_sign_in_button_home_page"
            android:layout_marginStart="11dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginBottom="14dp" app:layout_constraintBottom_toTopOf="@+id/register_button_home_page"/>
    <Button
            android:text="@string/Register"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:id="@+id/register_button_home_page"
            app:layout_constraintStart_toStartOf="@+id/sing_in_button_home_page" app:layout_constraintTop_toBottomOf="@+id/sing_in_button_home_page"
            android:layout_marginBottom="19dp" app:layout_constraintBottom_toTopOf="@+id/google_sign_in_button_home_page"/>

    <com.google.android.gms.common.SignInButton
            android:id="@+id/google_sign_in_button_home_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/register_button_home_page" android:layout_marginBottom="148dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>