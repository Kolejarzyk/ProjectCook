<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="#f3e5ab">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView
                android:text="@string/products_list"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_marginStart="86dp"
                android:layout_height="wrap_content" android:id="@+id/textView12"/>
    </RelativeLayout>

    <View
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="#FF909090"/>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

        <SearchView android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

    </RelativeLayout>
        <View
                android:layout_height="2dp"
                android:layout_width="match_parent"
                android:background="#FF909090"/>

    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/category_arrays"
                android:prompt="@string/category_prompt" android:layout_alignParentStart="true"
                android:layout_alignBaseline="@+id/btnSubmit"/>

        <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

        <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit" />
    </RelativeLayout>

        <View
                android:layout_height="2dp"
                android:layout_width="match_parent"
                android:background="#FF909090"/>
        <android.support.v7.widget.GridLayout
                app:columnOrderPreserved="false"
                android:layout_weight="8"
                android:layout_gravity="center"
                app:useDefaultMargins="false"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/relative1"
                            android:padding="5dp"
                            android:layout_margin="6dp"
                            android:background="@drawable/customborder">

                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:padding="5dp"
                        tools:srcCompat="@drawable/tomato"
                        android:id="@+id/imageView"/>

                <TextView android:layout_width="wrap_content"
                          android:text="@string/item1"
                          android:id="@+id/product_name"
                          android:textSize="20sp"
                          android:layout_height="44dp"
                          android:layout_toEndOf="@+id/imageView"
                          android:padding="5dp"/>

                <TextView android:layout_width="wrap_content" android:text="@string/product_description"
                          android:textSize="18sp"
                          android:layout_height="wrap_content"
                          android:layout_toEndOf="@+id/imageView"
                          android:layout_below="@+id/product_name"
                          android:padding="5dp" app:layout_column="1" app:layout_row="0"/>

                <Button
                        android:background="@drawable/adding_button"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/addProductButton"
                        android:layout_marginTop="5dp"
                        android:gravity="end"
                        android:layout_below="@id/input1" android:layout_alignEnd="@+id/imageView"
                        android:layout_marginEnd="-278dp"/>
            </RelativeLayout>
        </android.support.v7.widget.GridLayout>
        <android.support.v7.widget.GridLayout
                app:columnOrderPreserved="false"
                android:layout_weight="8"
                android:layout_gravity="center"
                app:useDefaultMargins="false"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:layout_margin="6dp"
                            android:layout_below="@id/relative1"
                            android:background="@drawable/customborder">

                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:padding="5dp"
                        tools:srcCompat="@drawable/apple"
                        android:id="@+id/imageView2"/>

                <TextView android:layout_width="wrap_content"
                          android:text="@string/item5"
                          android:id="@+id/product_name2"
                          android:textSize="20sp"
                          android:layout_height="44dp"
                          android:layout_toEndOf="@+id/imageView2"
                          android:padding="5dp"/>

                <TextView android:layout_width="wrap_content" android:text="@string/product_description"
                          android:textSize="18sp"
                          android:layout_height="wrap_content"
                          android:layout_toEndOf="@+id/imageView2"
                          android:layout_below="@+id/product_name2"
                          android:padding="5dp" app:layout_column="1" app:layout_row="0"/>

                <Button
                        android:background="@drawable/adding_button"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/addProductButton2"
                        android:layout_marginTop="5dp"
                        android:gravity="end"
                        android:layout_below="@id/input1" android:layout_alignEnd="@+id/imageView2"
                        android:layout_marginEnd="-278dp"/>
            </RelativeLayout>
        </android.support.v7.widget.GridLayout>
        <android.support.v7.widget.GridLayout
                app:columnOrderPreserved="false"
                android:layout_weight="8"
                android:layout_gravity="center"
                app:useDefaultMargins="false"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:layout_margin="6dp"
                            android:layout_below="@id/relative1"
                            android:background="@drawable/customborder">

                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:padding="5dp"
                        tools:srcCompat="@drawable/cinnamon"
                        android:id="@+id/imageView3"/>

                <TextView android:layout_width="wrap_content"
                          android:text="@string/item9"
                          android:id="@+id/product_name3"
                          android:textSize="20sp"
                          android:layout_height="44dp"
                          android:layout_toEndOf="@+id/imageView3"
                          android:padding="5dp"/>

                <TextView android:layout_width="wrap_content" android:text="@string/product_description"
                          android:textSize="18sp"
                          android:layout_height="wrap_content"
                          android:layout_toEndOf="@+id/imageView3"
                          android:layout_below="@+id/product_name3"
                          android:padding="5dp" app:layout_column="1" app:layout_row="0"/>

                <Button
                        android:background="@drawable/adding_button"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/addProductButton3"
                        android:layout_marginTop="5dp"
                        android:gravity="end"
                        android:layout_below="@id/input1" android:layout_alignEnd="@+id/imageView3"
                        android:layout_marginEnd="-278dp"/>
            </RelativeLayout>
        </android.support.v7.widget.GridLayout>
    </LinearLayout>
</ScrollView>