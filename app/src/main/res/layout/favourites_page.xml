<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:background="@color/design_default_color_primary">


    <android.support.v7.widget.CardView android:layout_width="370dp"
                                        android:layout_height="200dp"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginTop="10dp"
                                        android:id="@+id/cardfav1"


    >
        <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:contentDescription="@string/item2"
                tools:srcCompat="@tools:sample/avatars[10]"
                />

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:layout_gravity="end"
                android:text="@string/creator"
                android:layout_marginTop="50dp"
                android:id="@+id/editText3"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_gravity="end"
                android:text="@string/name"
                android:ems="10"
                android:id="@+id/editText"
                />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:layout_gravity="end"
                android:layout_marginTop="100dp"
                android:text="@string/page_date"
                android:ems="10"
                android:id="@+id/editText2"/>
        <TextView
                android:text="@string/category1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_marginTop="100dp"
                android:layout_marginStart="24dp"/>
        <TextView
                android:text="@string/category2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:layout_marginTop="120dp"
                android:layout_marginStart="24dp"/>
        <TextView
                android:text="@string/category3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:layout_marginTop="140dp"
                android:layout_marginStart="24dp"/>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_height="200dp"
        android:layout_width="370dp"
        android:layout_below="@id/cardfav1"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        >
        <RelativeLayout android:layout_width="match_parent"
                        android:padding="5dp"
                        android:layout_margin="6dp"
                        android:layout_height="match_parent"

                        android:background="@drawable/customborder">

            <TextView
                    android:text="@string/recipe_name"
                    app:layout_column="0"
                    app:layout_row="0"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textTitle1"/>
            <TextView
                    android:text="@string/recipe_short_description"
                    app:layout_column="0"
                    app:layout_row="0"
                    android:textSize="16sp"
                    android:layout_below="@+id/textTitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView1"/>
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:contentDescription="@string/item1"
                    android:layout_below="@+id/textView1"
                    app:layout_column="0"
                    app:layout_row="0" tools:srcCompat="@tools:sample/avatars[11]"
                    android:id="@+id/imageItem1"/>
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="5dp"
                    android:contentDescription="@string/item1"
                    android:layout_below="@+id/textView1"
                    android:layout_toEndOf="@+id/imageItem1"
                    app:layout_column="1"
                    app:layout_row="0" tools:srcCompat="@tools:sample/avatars[10]"
                    android:id="@+id/imageItem2"/>
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="5dp"
                    android:contentDescription="@string/item1"
                    android:layout_below="@+id/textView1"
                    android:layout_toEndOf="@+id/imageItem2"
                    app:layout_column="1"
                    app:layout_row="0" tools:srcCompat="@tools:sample/avatars[9]"
                    android:id="@+id/imageItem3"/>
            <TextView
                    android:text="@string/owner"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:drawableStart="@drawable/ic_owner"
                    android:layout_below="@+id/imageItem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/owner"/>
            <TextView
                    android:text="@string/date"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="25dp"
                    android:drawableStart="@drawable/ic_date"
                    android:layout_below="@+id/imageItem1"
                    android:layout_toEndOf="@+id/owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/date"/>
            <TextView
                    android:text="@string/number_of_views"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="25dp"
                    android:drawableStart="@drawable/ic_views"
                    android:layout_below="@+id/imageItem1"
                    android:layout_toEndOf="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/views"/>
            <TextView
                    android:text="@string/number_of_comments"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="25dp"
                    android:drawableStart="@drawable/ic_comments"
                    android:layout_below="@+id/imageItem1"
                    android:layout_toEndOf="@+id/views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/comments"/>
            <TextView
                    android:text="@string/favourites_times"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="25dp"
                    android:drawableStart="@drawable/ic_favs"
                    android:layout_below="@+id/imageItem1"
                    android:layout_toEndOf="@+id/comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/favourites"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/button1"
                    android:layout_alignParentBottom="true"
                    android:background="@android:color/transparent"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>